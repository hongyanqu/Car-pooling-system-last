<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>cs.mum.carpooling.Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParentServlet</servlet-name>
        <servlet-class>cs.mum.carpooling.Controller.ParentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllPosts</servlet-name>
        <servlet-class>cs.mum.carpooling.Controller.AllPosts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddComment</servlet-name>
        <servlet-class>cs.mum.carpooling.Controller.AddComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddLike</servlet-name>
        <servlet-class>cs.mum.carpooling.Controller.AddLike</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPost</servlet-name>
        <servlet-class>cs.mum.carpooling.Controller.AddPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetNewPosts</servlet-name>
        <servlet-class>cs.mum.carpooling.Controller.GetNewPosts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetRecentPosts</servlet-name>
        <servlet-class>cs.mum.carpooling.Controller.GetRecentPosts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>cs.mum.carpooling.Controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpController</servlet-name>
        <servlet-class>cs.mum.carpooling.Controller.SignUpController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParentServlet</servlet-name>
        <url-pattern>/ParentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllPosts</servlet-name>
        <url-pattern>/AllPosts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddComment</servlet-name>
        <url-pattern>/AddComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddLike</servlet-name>
        <url-pattern>/AddLike</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPost</servlet-name>
        <url-pattern>/AddPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetNewPosts</servlet-name>
        <url-pattern>/GetNewPosts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetRecentPosts</servlet-name>
        <url-pattern>/GetRecentPosts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpController</servlet-name>
        <url-pattern>/SignUpController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
